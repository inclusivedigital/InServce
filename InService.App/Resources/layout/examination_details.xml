<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">
      <TextView
        android:layout_marginTop="@dimen/activity_top_margin"
        android:text="Examination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
      <TextView
          android:text="Topic here"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="?android:attr/textColorPrimary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/text_topic"
          android:layout_marginBottom="16dp" />
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
          android:orientation="vertical"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content">
          <TextView
              android:text="Course"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              />
          <TextView
              android:text="Test course name"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="?android:attr/textColorPrimary"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/text_coursename"
              android:textStyle="bold"
              android:layout_marginBottom="16dp" />
        </LinearLayout>
        <LinearLayout
          android:orientation="vertical"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content">
          <TextView
              android:text="Module"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              />
          <TextView
              android:text="Test module name"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="?android:attr/textColorPrimary"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/text_module"
              android:layout_marginBottom="16dp" />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
        android:id="@+id/view_duration"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />
        <TextView
            android:text="2hrs"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_duration"
            android:layout_marginBottom="16dp" />
      </LinearLayout>
      <TextView
          android:text="Available until"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         />
      <TextView
          android:layout_width="match_parent"
         
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:layout_height="wrap_content"
          android:id="@+id/text_enddate"
                android:text="2201"
          android:layout_marginBottom="16dp" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>