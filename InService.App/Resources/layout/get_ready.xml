<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:textColor="@color/red_600"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Attention!"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="You are about to start a short exercise. Results will be recorded under your profile for future reference."
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Course"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Course name"
                android:id="@+id/txt_course_name"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Module"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Module name"
                android:id="@+id/txt_module_name"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Back"
                android:background="@color/red_600"
                android:layout_weight="1"
                android:id="@+id/btn_back"
                android:drawableLeft="@drawable/ic_chevron_left"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="match_parent"
                android:background="@color/green_800"
                android:drawableRight="@drawable/ic_chevron_right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Continue"
                android:layout_weight="1"
                android:id="@+id/btn_continue"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
