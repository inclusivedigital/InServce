<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/layout_gradient2"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_margin="8dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_no_border"
            android:textAllCaps="false"
            android:drawableRight="@drawable/ic_pencil"
             android:drawableTint="@color/green_800"
            android:paddingRight="10dp"
            android:text="Choose your preferred language"
            android:layout_marginTop="1dp"
            android:textColor="@color/black"
            android:id="@+id/language"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_orange_light"
            android:textAllCaps="true"
            android:text="Register"
            android:layout_marginTop="10dp"
             android:paddingRight="10dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_account_plus"
             android:drawableTint="@color/green_800"
            android:id="@+id/register"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_white_border"
            android:textAllCaps="true"
            android:text="Login"
            android:layout_marginTop="10dp"
             android:paddingRight="10dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_account_key"
             android:drawableTint="@color/green_800"
            android:id="@+id/login"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_no_border"
            android:textAllCaps="true"
            android:text="Coontinue as a guest"
            android:layout_marginTop="10dp"
             android:paddingRight="10dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_account_plus_outline"
           android:drawableTint="@color/green_800"
            android:id="@+id/guestuser"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_no_border"
            android:textAllCaps="false"
             android:drawableRight="@drawable/ic_magnify"
             android:drawableTint="@color/green_800"
            android:text="About In-serrvice Training App"
            android:layout_marginTop="10dp"
             android:paddingRight="10dp"
            android:textColor="@color/black"
            android:id="@+id/aboutapp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Note: Some functions require an account. You will be prompted to login when you get to these sections."
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>