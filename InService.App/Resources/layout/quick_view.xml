<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:divider="?android:attr/listDivider"
    android:showDividers="end"
    android:background="@drawable/roundlinearlayout"
    android:layout_height="wrap_content" 
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/question_count_number"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <android.webkit.WebView
            android:background="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/webView1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:paddingLeft="8dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:src="@drawable/ic_check" />

                <TextView
                    android:id="@+id/text_myanswer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content"
                    android:text="My answer is 4" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <Button
        android:visibility="gone"
        android:layout_width="match_parent"
        android:id="@+id/text_correctanswer"
        android:text="This is the corret answer"
        android:textColor="@color/white"
        android:background="@android:color/holo_green_dark"
        android:layout_height="match_parent"/>



</LinearLayout>