@model Instruction
@section subnav{
    <div class="navbar-nav">
        <div class="nav-item"><a class="nav-link navbar-brand" href="@Url.Index()"><i class="mdi mdi-chevron-left"></i> Instructions</a></div>
        <div class="nav-item"><a class="nav-link " href="@Url.Edit()"><i class="mdi mdi-pencil"></i> Edit</a></div>
    </div>
}
<h3 class="font-weight-light">Instruction</h3>
<div class="row">
    <div class="col-md-7">
        <div class="card">
            <div class="card-body">
                <div class="form-group mb-4">
                    <label class="text-muted h5 mb-0">Type</label>
                    <div>@Model.Type.ToEnumString()</div>
                </div>
                <div class="form-group mb-4">
                    <label class="text-muted h5 mb-0">Instruction</label>
                    <div>@Html.Raw(Model.Description)</div>
                </div>

            </div>
        </div>

    </div>
</div>
