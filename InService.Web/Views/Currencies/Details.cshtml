@model Currency

@section subnav{
    <div class="navbar-nav">
        <div class="nav-item"><a class="nav-link navbar-brand" href="@Url.Index()"><i class="mdi mdi-chevron-double-left"></i> Currencies</a></div>
        <div class="nav-item"><a class="nav-link" href="@Url.Edit()"><i class="mdi mdi-pencil"></i> Edit..</a></div>
        <div class="nav-item"><a class="nav-link" href="@Url.Add()"><i class="mdi mdi-plus"></i> Add new...</a></div>
    </div>
}
<h3 class="font-weight-light">Currency details</h3>
<div class="row">
    <div class="col-md-7">
        <div class="card shadow">
            <div class="card-body">
                @if (Model.IsDefault)
                {
                    <div class="form-group row">
                        <span class="badge badge-success badge-pill"><i class="mdi mdi-check-all"></i> Default currency</span>
                    </div>
                }
                <div class="form-group row">
                    <label class="col-md-4 font-weight-bold">Name</label>
                    <div class="col-md-8">@Model.Name</div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 font-weight-bold">Symbol</label>
                    <div class="col-md-8">@Model.Symbol</div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 font-weight-bold">Creation date</label>
                    <div class="col-md-8">@Model.CreationDate.ToString("dd MMM yyy HH:mm")</div>
                </div>
            </div>
        </div>
    </div>
</div>

