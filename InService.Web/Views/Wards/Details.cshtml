@model Ward

@section subnav{
    <div class="navbar-nav">
        <div class="nav-item">  <a class="nav-link" href="@Url.Action("Index", "Countries")"><i class="mdi mdi-chevron-double-left"></i> Countries</a></div>
        <div class="nav-item"><a class="nav-link" href="@Url.Action("Details", "Countries",new { Model.District.Province.Country.ID})">@Model.District.Province.Country.Name</a></div>
        <div class="nav-item"><a class="nav-link" href="@Url.Action("Details", "Provinces",new { Model.District.Province.ID})">@Model.District.Province.Name</a></div>
        <div class="nav-item"><a class="nav-link" href="@Url.Action("Details", "Districts",new { Model.District.ID})">@Model.District.Name</a></div>
        <div class="nav-item"><a class="nav-link" href="@Url.Action("Details", "Wards",new { Model.ID})">@Model.Name</a></div>
        <div class="nav-item"><a class="nav-link" href="@Url.Action("Edit","Wards",new { Model.ID})"><i class="mdi mdi-pencil"></i> Edit</a></div>
        <div class="nav-item"><a class="nav-link" href="@Url.Add("Wards",new { Model.District.ID})"><i class="mdi mdi-plus"></i> Add new ward</a></div>
    </div>
}

<h3 class="font-weight-light">Ward details</h3>
<div class="row">
    <div class="col-md-7">
        <div class="card shadow">
            <div class="card-body">
                @if (!string.IsNullOrWhiteSpace(Model.Number))
                {
                    <div class="form-group">
                        <label class="text-muted font-weight-bold mb-0">Number</label>
                        <div>Ward @Model.Number</div>
                    </div>
                }
                <div class="form-group">
                    <label class="text-muted font-weight-bold mb-0">Code</label>
                    <div>@Model.Code</div>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.Name))
                {
                    <div class="form-group">
                        <label class="text-muted font-weight-bold mb-0">Name</label>
                        <div>@Model.Name</div>
                    </div>
                }
                <div class="form-group">
                    <label class="text-muted font-weight-bold mb-0">District</label>
                    <div><a href="@Url.Details("Districts",new { Model.District.ID})">@Model.District.Name</a></div>
                </div>
                <div class="form-group">
                    <label class="text-muted font-weight-bold mb-0">Province</label>
                    <div><a href="@Url.Details("Provinces",new { Model.District.Province.ID})">@Model.District.Province.Name</a></div>
                </div>
                <div class="form-group">
                    <label class="text-muted font-weight-bold mb-0">Country</label>
                    <div><a href="@Url.Details("Countries",new {Model.District.Province.Country.ID })">@Model.District.Province.Country.Name</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
