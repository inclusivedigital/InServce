@model Province

@section subnav{
    <div class="navbar-nav">
        <div class="nav-item"><a class="nav-link navbar-brand" href="@Url.Index("Countries")">Countries</a></div>
        <div class="nav-item"><a class="nav-link" href="@Url.Details("Countries",new { Model.Country.ID})">@Model.Country.Name</a></div>
        <div class="nav-item"><a class="nav-link" href="@Url.Details()">@Model.Name</a></div>
        <div class="nav-item"><a class="nav-link" href="@Url.Edit()"><i class="mdi mdi-pencil"></i>Edit</a></div>
        <div class="nav-item"><a class="nav-link" href="@Url.Add("Districts",new {  Model.ID})"><i class="mdi mdi-plus"></i> Add district</a></div>
    </div>
}

<h3 class="font-weight-light">Province details</h3>
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label class="font-weight-bold text-muted mb-0">Name</label>
                    <div>@Model.Name</div>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold text-muted mb-0">Code</label>
                    <div>@Model.Code</div>
                </div>
                <div class="form-group">
                    <label class="text-muted font-weight-bold mb-0">Country</label>
                    <div><a href="@Url.Details("Countries",new { Model.Country.ID})">@Model.Country.Name</a></div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-6 ">
        @if (Model.Districts.Any())
        {
            <div>
                <h4 class="text-muted mt-3">Districts</h4>
            </div>
            <table class="table table-striped table-hover table-sm">
                <tbody>
                    @foreach (var item in Model.Districts.OrderBy(c => c.Name))
                    {
                        <tr>
                            <td><a href="@Url.Details("Districts",new { item.ID})">@item.Name</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center">
                <h6 class="text-danger font-weight-light">No districts found</h6>
                <a class="btn btn-outline-success btn-sm" href="@Url.Add("Districts",new {  Model.ID})"><i class="mdi mdi-plus"></i> Add district</a>
            </div>
        }
    </div>
</div>
