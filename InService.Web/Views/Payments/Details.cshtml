
@model Payment
@section subnav{
    <div class="navbar-nav">
        <div class="nav-item"><a class="nav-link navbar-brand" href="@Url.Index()"><i class="mdi mdi-chevron-double-left"></i> Payments</a></div>
        <div class="nav-item"><a class="nav-link navbar-brand" href="@Url.Details(Model.ID)"> @Model.Reference</a></div>
    </div>
    <div class="navbar-nav ml-auto">
        <div class="nav-item"><a class="nav-link text-white" href="@Url.Delete()"><i class="mdi mdi-delete text-danger"></i> Delete</a></div>
        <div class="nav-item"><a class="nav-link text-white" href="#" onclick="window.print();"><i class="mdi mdi-printer"></i> Print</a></div>
    </div>
}

<div class="row mt-1">
    <div class="col-md-12">
        <div class="p-2 mb-3">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="mb-0  h5">In Service</div>
                        <div class="mb-0  h6">Payment</div>
                        <div> <address class="mb-0 ">Address here</address></div>
                    </div>
                    <div class="form-group">
                        <div class="h5"></div>
                    </div>
                </div>
                <div class="col-md-6 text-right">
                    <h4>Payment</h4>
                    <div><span class="h5"> @Model.Reference</span></div>
                    <div>Date : @Model.CreationDate.BasicFormat()</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @if (Model.User != null)
                    {
                        <div class="small">Bill to</div>
                        <div class="mb-0  h5">@Model.User.Name</div>
                    }
                </div>
            </div>


            <hr />
            <h4 class="font-weight-light mt-3">Items</h4>
            <table class="table table-striped table-sm table-hover">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th class="text-right align-bottom">Sub Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Payment</td>
                        <td>@Model.Amount</td>
                    </tr>
                </tbody>
            </table>
            <hr />
            <div class="small d-print-none">
                <label class="">Created @Model.CreationDate.BasicFormatWithTime() by <i class="mdi mdi-account"></i> @Model.User.Name</label>
            </div>
        </div>
    </div>
</div>


